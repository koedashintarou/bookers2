<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <main>
          <p id=“notice”>
            <%= notice %>
          </p>
          <table>
            <h1>Users info
              <h1> <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg">
                <table class="table">
                  <thead>
                    <tr>
                      <th>name</th>
                      <th>introduction</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= link_to edit_user_path(@user),class: "btn btn-block btn-outline-secondary", type: "button" do %>
                    <span class="fas fa-user-cog" aria-hidden="true" 　fa-100x></span>
                      <% end %>
                        <tr>
                          <td>
                            <%= @user.name %>
                          </td>
                          <td>
                            <%= @user.introduction %>
                          </td>
                        </tr>
                  </tbody>
                </table>
                <div class="row"> </div>
                <h2>New book</h2>
                <form action="/books" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="9DnKTmGqMpxtNiuIUH8t9bbrwkGKjDxaEh2lAPXX7MvpGCYXouPLnO3hMGXwqv1EStmMtSidkJ79zlcrm87d9w==">
                  <div class="form-group">
                    <%= form_with model: @newbook,url: books_path, local:true do |f| %>
                      <% if @newbook.errors.any? %>
                        <%= @newbook.errors.count %>件のerror
                          <% @newbook.errors.full_messages.each do |message| %>
                            <%= message %>
                              <% end %>
                                <% end %>
                                  <h4>Title</h4>
                                  <%= f.text_field :title %>
                                    <h4></h4>
                                    <%= f.text_field :body %>
                                      <%= f.submit 'Create Book' %>
                                        <% end %>
                </form>
                </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <table>
          <h1>Book detail
              <caption>
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Body</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th>
                      <%= link_to user_path(@user) do %>
                        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                          <% end %>
                            <%= link_to @user.name, user_path(@user) %>
                              <%= link_to @book.title, book_path %>
                    </th>
                    <td>
                      <%= @book.body %>
                    </td>
                    <td>
                      <% if @user.id == current_user.id %>
                        <%= link_to "Edit", edit_book_path(@book) %>
                          <%= link_to "Destroy", book_path(@book), method: :delete %>
                            <% end %>
                              <div class="comments">
                                <p>コメント件数：
                                  <%= @book.post_comments.count %>
                                </p>
                                <% @book.post_comments.each do |post_comment| %>
                                  <%= post_comment.user.name %>
                                    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
                                      <%= post_comment.comment %>
                                        <% end %>
                              </div>
                              <div class="new-comment">
                                <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
                                  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
                                    <%= f.submit "送信する" %>
                                      <% if @post_comment.user == current_user %>
                                        <div class="comment-delete">
                                          <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
                                        </div>
                                        <% end %>
                                          <% end %>
                              </div>
                    </td>
                  </tr>
                </tbody>
        </table>
      </div>
    
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </div>
  </div>
  </div>
  </div>
</body>