<body>
    <h1>User info</h1>
      <%= form_with model:@user, local: true  do |f| %>
       <% if @user.errors.any? %>
            <%= @user.errors.count %>件のerror
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
        <% end %>

      <div class="field">
        <label for="book_title">Name</label>
        <%= f.text_field :name %>
      </div>
      
      <div class="field">
        <label for="book_image">Image</label>
        <%= f.attachment_field :profile_image %>
      </div>
      

      <div class="field">
        <label for="book_body">Introduction</label>
        <%= f.text_area :introduction %>
      </div>

      <div class="actions">

         <%= f.submit 'Update User' %>
      </div>
    </form>



<% end %>

    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>



</body>

